<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox minHeight="105" spacing="12" GridPane.columnIndex="0">
      <HBox spacing="8" alignment="CENTER_LEFT">
        <HBox HBox.hgrow="NEVER" alignment="CENTER" minHeight="26" maxHeight="26" minWidth="26" maxWidth="26"
              style="-fx-background-color: #F2F2F2; -fx-background-radius: 20">
          <Label fx:id="id" styleClass="cell_big_label">
            <minWidth>
              <!-- Ensures that the label text is never truncated -->
              <Region fx:constant="USE_PREF_SIZE" />
            </minWidth>
          </Label>
        </HBox>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" style="-fx-font-size: 16"/>
      </HBox>
      <FlowPane fx:id="tags"/>
      <HBox alignment="CENTER_LEFT" style="-fx-padding: 12 0 0 0">
        <ImageView fitHeight="14" fitWidth="14">
          <Image url="@/images/phone_icon.png"/>
        </ImageView>
        <Label minWidth="65" prefWidth="65" text="Phone"
               style="-fx-padding: 0 0 0 5; -fx-text-fill: #6C6C6C; -fx-font-size: 12"/>
        <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
      </HBox>
      <HBox alignment="CENTER_LEFT">
        <ImageView fitHeight="14" fitWidth="14">
          <Image url="@/images/email_icon.png"/>
        </ImageView>
        <Label minWidth="65" prefWidth="65" text="Email" style="-fx-padding: 0 0 0 5; -fx-text-fill: #6C6C6C; -fx-font-size: 12"/>
        <Label fx:id="email" styleClass="cell_small_label" text="\$email"/>
      </HBox>
      <HBox alignment="CENTER_LEFT">
        <ImageView fitHeight="14" fitWidth="14">
          <Image url="@/images/home_icon.png"/>
        </ImageView>
        <Label minWidth="65" prefWidth="65" text="Address" style="-fx-padding: 0 0 0 5; -fx-text-fill: #6C6C6C; -fx-font-size: 12"/>
        <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
      </HBox>
      <Label fx:id="payment" styleClass="cell_small_label" text="\$payment" />
    </VBox>
    <VBox fx:id="attendanceContainerPlaceholder" GridPane.columnIndex="1"/>
  </GridPane>
</HBox>
